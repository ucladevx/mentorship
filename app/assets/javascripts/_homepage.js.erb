$(document).ready(function(){
	$('.right.menu.open').unbind().click(function(e){

		console.log('clicked')
        e.preventDefault();
		$('.ui.vertical.menu').toggle();

		// Check to see the orientation of the chevron
		// and alternate
		var icon = document.getElementById("chevron");
		var iconClass = icon.className;

		if (iconClass == "chevron down icon") {
			document.getElementById("chevron").classList= "chevron up icon";
			document.getElementById("yellowbg").style.paddingTop= "262px";
		}

		else {
			document.getElementById("chevron").classList= "chevron down icon";
			document.getElementById("yellowbg").style.paddingTop= "120px";
		}
	});
	$('.ui.dropdown').dropdown();
	$('.note-cards').not('.slick-initialized').slick({
		slidesToShow: 3,
		slidesToScroll: 3,
		infinite: false,
		arrows: true,
		prevArrow: $('.prev-notes'),
		nextArrow: $('.next-notes'),
		responsive: [
		{
			breakpoint: 1440,
			settings: {
				slidesToShow: 3,
				slidesToScroll: 3,
			}
		},
		{
			breakpoint: 1000,
			settings: {
				slidesToShow: 2,
				slidesToScroll: 2
			}
		},
		{
			breakpoint: 700,
			settings: {
				slidesToShow: 1,
				slidesToScroll: 1
			}
		}
	]
	});	
	$('.tutorial-cards').not('.slick-initialized').slick({
		slidesToShow: 3,
		slidesToScroll: 3,
		infinite: false,
		arrows: true,
		prevArrow: $('.prev-tut'),
		nextArrow: $('.next-tut'),
		responsive: [
		{
			breakpoint: 1440,
			settings: {
				slidesToShow: 3,
				slidesToScroll: 3,
			}
		},
		{
			breakpoint: 1000,
			settings: {
				slidesToShow: 2,
				slidesToScroll: 2
			}
		},
		{
			breakpoint: 700,
			settings: {
				slidesToShow: 1,
				slidesToScroll: 1
			}
		}
	]
	});
	$('#link').click(function(){
	    $("html, body").animate({ scrollTop: 0 }, 400);
	    return false;
 	});

});
