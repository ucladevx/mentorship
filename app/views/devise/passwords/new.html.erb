<html>
  <head>
    <title>Mentorship</title>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag ('homepage.js') %>
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

    <meta name="viewport" content="width=device-width" />

  </head>
  <body>

    <!-- Yellow Box -->
    
    <div class="ui center aligned padded grid, grid login background">
      <div class="sixteen wide column">
       <h2>Forgot Password</h2>
       </div>

       <div class="six wide left aligned column">
	    	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' }) do |f| %>
			<%= devise_error_messages!%>

			<div class="field">
			  <%= f.label :email %>
			  <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
			</div>

			<div class="actions">
			  <%= f.submit "Send password reset", class: 'ui button' %>
			</div>
			<% end %>

			<%= render "devise/shared/links" %>

		</div>

    </div>
  </body>
</html>
